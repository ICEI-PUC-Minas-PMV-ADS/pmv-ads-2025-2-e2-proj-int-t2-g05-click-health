@model ClickHealth.Dashboard.Models.Paciente

@{
    ViewData["Title"] = "Excluir Paciente";
}

<h3>Tem certeza que deseja excluir este paciente?</h3>
<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DadosPessoais)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DadosPessoais)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CondicoesMedicas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CondicoesMedicas)
        </dd>
    </dl>
    

    <form asp-action="ExcluirConfirmado" method="post">
        <input type="hidden" asp-for="IdPaciente" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a Lista</a>
    </form>
</div>