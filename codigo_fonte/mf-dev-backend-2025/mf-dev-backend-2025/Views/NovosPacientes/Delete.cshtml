@model mf_dev_backend_2025.Models.novopaciente
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Excluir Conta";
    string Mask(string? s)
    {
        var n = string.IsNullOrEmpty(s) ? 8 : s!.Length;
        if (n < 8) n = 8;
        if (n > 12) n = 12;
        return new string('•', n);
    }
    var foto = string.IsNullOrWhiteSpace(Model?.FotoPath)
        ? Url.Content("~/img/avatar-placeholder.svg")
        : Model!.FotoPath;
}

@section Styles {
    <style>
        body {
            background: #f4f6f8;
        }

        .page {
            max-width: 760px;
            margin: 32px auto;
            padding: 0 16px;
        }

        .card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0,0,0,.08);
            padding: 24px;
        }

        .title {
            font-size: 1.6rem;
            font-weight: 800;
            margin: 0 0 8px;
        }

        .subtitle {
            color: #6c757d;
            margin-bottom: 16px;
        }

        .header {
            display: flex;
            align-items: center;
            gap: 14px;
            margin-bottom: 14px;
        }

        .avatar {
            width: 72px;
            height: 72px;
            border-radius: 50%;
            overflow: hidden;
            background: #eef1f4;
        }

            .avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .rows {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 8px;
        }

        .row {
            display: grid;
            grid-template-columns: 160px 1fr;
            gap: 12px;
            border: 1px solid #e9edf2;
            border-radius: 12px;
            padding: 12px 14px;
            background: #fbfdff;
        }

        .label {
            color: #6c757d;
            font-weight: 600;
        }

        .value {
            color: #212529;
            word-break: break-word;
        }

        .warn {
            background: #fff3cd;
            border: 1px solid #ffe08a;
            color: #7a5d00;
            border-radius: 10px;
            padding: 12px;
            margin: 16px 0 8px;
        }

        .actions {
            display: flex;
            gap: 10px;
            margin-top: 14px;
        }

        .btn {
            border-radius: 8px;
            padding: 10px 14px;
            font-weight: 600;
            border: 1px solid transparent;
            text-decoration: none;
        }

        .btn-danger {
            background: #dc3545;
            color: #fff;
        }

        .btn-secondary {
            background: #fff;
            color: #0d6efd;
            border-color: #b6d1ff;
        }

        .btn:hover {
            filter: brightness(.96);
        }
    </style>
}

<div class="page">
    <div class="card">
        <div class="header">
            <div class="avatar">
                <img src="@foto" alt="Foto" />
            </div>
            <div>
                <h1 class="title">Excluir Conta</h1>
                <div class="subtitle">Tem certeza que deseja excluir esta conta? Esta ação não pode ser desfeita.</div>
            </div>
        </div>

        <div class="rows">
            <div class="row">
                <div class="label">Nome</div>
                <div class="value">@Model.Nome</div>
            </div>
            <div class="row">
                <div class="label">E-mail</div>
                <div class="value">@Model.email</div>
            </div>
            <div class="row">
                <div class="label">Senha</div>
                <div class="value">@Mask(Model.senha)</div>
            </div>
        </div>

        <div class="warn">
            Ao confirmar, a conta será removida do banco de dados e a foto associada será apagada do servidor.
        </div>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="actions">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-danger">Excluir definitivamente</button>
            </div>
        </form>
    </div>
</div>
