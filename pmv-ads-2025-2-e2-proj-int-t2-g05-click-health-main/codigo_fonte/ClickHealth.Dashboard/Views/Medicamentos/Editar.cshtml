@model ClickHealth.Dashboard.Models.Medicacao
@{
    ViewData["Title"] = "Editar Medicamento";
    ViewData["HideSidebar"] = true;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Editar Medicamento
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <input type="hidden" asp-for="IdMedicacao" />
                        <input type="hidden" asp-for="IdPaciente" />
                        <input type="hidden" asp-for="DataCadastro" />

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome do Medicamento</label>
                            <input asp-for="Nome" class="form-control" placeholder="Ex: Paracetamol" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Dosagem" class="form-label">Dosagem</label>
                            <input asp-for="Dosagem" class="form-control" placeholder="Ex: 500mg, 200mg/ml" />
                            <span asp-validation-for="Dosagem" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrincipioAtivo" class="form-label">Princípio Ativo</label>
                            <input asp-for="PrincipioAtivo" class="form-control" placeholder="Ex: Paracetamol" />
                            <span asp-validation-for="PrincipioAtivo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Instrucoes" class="form-label">Instruções de Uso</label>
                            <textarea asp-for="Instrucoes" class="form-control" rows="3" placeholder="Ex: Tomar 1 comprimido a cada 8 horas"></textarea>
                            <span asp-validation-for="Instrucoes" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DataInicio" class="form-label">Data de Início</label>
                                <input asp-for="DataInicio" type="date" class="form-control" />
                                <span asp-validation-for="DataInicio" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DataFim" class="form-label">Data de Término</label>
                                <input asp-for="DataFim" type="date" class="form-control" />
                                <span asp-validation-for="DataFim" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
