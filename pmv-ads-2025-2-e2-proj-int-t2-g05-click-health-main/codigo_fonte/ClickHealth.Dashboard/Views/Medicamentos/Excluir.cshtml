@model ClickHealth.Dashboard.Models.Medicacao
@{
    ViewData["Title"] = "Excluir Medicamento";
    ViewData["HideSidebar"] = true;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirmar Exclusão
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle"></i>
                        <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja excluir este medicamento?
                    </div>

                    <h5 class="mb-3">Detalhes do Medicamento:</h5>
                    
                    <dl class="row">
                        <dt class="col-sm-4">Nome:</dt>
                        <dd class="col-sm-8"><strong>@Model.Nome</strong></dd>

                        <dt class="col-sm-4">Dosagem:</dt>
                        <dd class="col-sm-8">@(Model.Dosagem ?? "—")</dd>

                        <dt class="col-sm-4">Princípio Ativo:</dt>
                        <dd class="col-sm-8">@(Model.PrincipioAtivo ?? "—")</dd>

                        @if (!string.IsNullOrWhiteSpace(Model.Instrucoes))
                        {
                            <dt class="col-sm-4">Instruções:</dt>
                            <dd class="col-sm-8">@Model.Instrucoes</dd>
                        }

                        @if (Model.DataInicio.HasValue)
                        {
                            <dt class="col-sm-4">Data de Início:</dt>
                            <dd class="col-sm-8">@Model.DataInicio.Value.ToString("dd/MM/yyyy")</dd>
                        }

                        @if (Model.DataFim.HasValue)
                        {
                            <dt class="col-sm-4">Data de Término:</dt>
                            <dd class="col-sm-8">@Model.DataFim.Value.ToString("dd/MM/yyyy")</dd>
                        }
                    </dl>

                    <form asp-action="Excluir" method="post">
                        <input type="hidden" asp-for="IdMedicacao" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
