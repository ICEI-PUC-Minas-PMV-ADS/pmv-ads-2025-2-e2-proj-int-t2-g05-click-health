@model IEnumerable<ClickHealth.Dashboard.Models.Medicacao>
@{
    ViewData["Title"] = "Medicamentos";
    ViewData["HideSidebar"] = true;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Medicamentos Cadastrados</h2>
        <a asp-action="Adicionar" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i> Adicionar Medicamento
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>Dosagem</th>
                                <th>Princípio Ativo</th>
                                <th>Instruções</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.Nome</strong></td>
                                    <td>@(item.Dosagem ?? "—")</td>
                                    <td>@(item.PrincipioAtivo ?? "—")</td>
                                    <td>@(item.Instrucoes ?? "—")</td>
                                    <td>
                                        <a asp-action="Editar" asp-route-id="@item.IdMedicacao" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-pills fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhum medicamento cadastrado</h5>
                    <p class="text-muted">Clique no botão acima para adicionar o primeiro.</p>
                </div>
            }
        </div>
    </div>
</div>