@model ClickHealth.Dashboard.Models.Notificacao
@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Detalhes da Notificação";
}

<h2 class="mb-3">@ViewData["Title"]</h2>
<hr />

<div class="card shadow-sm col-md-6">
    <div class="card-body">
        <dl class="row mb-0">
            <!-- Paciente -->
            <dt class="col-sm-4 fw-semibold text-secondary">Paciente</dt>
            <dd class="col-sm-8">@Model.Paciente?.DadosPessoais</dd>

            <!-- Título -->
            <dt class="col-sm-4 fw-semibold text-secondary">Título</dt>
            <dd class="col-sm-8">@Model.Titulo</dd>

            <!-- Mensagem -->
            <dt class="col-sm-4 fw-semibold text-secondary">Mensagem</dt>
            <dd class="col-sm-8">@Model.Mensagem</dd>

            <!-- Tipo -->
            <dt class="col-sm-4 fw-semibold text-secondary">Tipo</dt>
            <dd class="col-sm-8">@Model.Tipo</dd>

            <!-- Data e Hora -->
            <dt class="col-sm-4 fw-semibold text-secondary">Data e Hora</dt>
            <dd class="col-sm-8">@Model.DataHora.ToString("dd/MM/yyyy HH:mm")</dd>

            <!-- Lida -->
            <dt class="col-sm-4 fw-semibold text-secondary">Lida</dt>
            <dd class="col-sm-8">
                @(Model.Lida ? "Sim" : "Não")
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
        <i class="bi bi-pencil"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar
    </a>
</div>
