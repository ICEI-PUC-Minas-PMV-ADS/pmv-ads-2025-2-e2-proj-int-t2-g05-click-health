@model ClickHealth.Dashboard.Models.Paciente

<h2>Editar Paciente</h2>

<form asp-action="Editar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdPaciente" />

    <div class="form-group">
        <label asp-for="DadosPessoais"></label>
        <input asp-for="DadosPessoais" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CondicoesMedicas"></label>
        <input asp-for="CondicoesMedicas" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
    </div>

    <div class="form-group" style="margin-top: 20px; display: flex; gap: 10px;">
        <button type="submit" class="btn btn-success">Salvar Alterações</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar ao Dashboard</a>
    </div>
</form>